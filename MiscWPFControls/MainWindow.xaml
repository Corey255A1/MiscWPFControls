<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiscWPFControls"
        xmlns:Compass="clr-namespace:MiscWPFControls.Controls.Compass" xmlns:Thermometer="clr-namespace:MiscWPFControls.Controls.Thermometer" x:Class="MiscWPFControls.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="364.5" Width="638.548" x:Name="mainWindow">
    <Window.DataContext>
        <local:ControlShowCaseViewModel/>
    </Window.DataContext>
    <ListView>
        <ListView.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel></WrapPanel>
            </ItemsPanelTemplate>
        </ListView.ItemsPanel>
        <ListView.ItemContainerStyle>
            <Style TargetType="ListViewItem">
                <Setter Property="Margin" Value="5"/>
            </Style>
        </ListView.ItemContainerStyle>
        <StackPanel>
            <Compass:Compass Width="100" Height="100" StarColor="Green" BackgroundFill="LightGray" NeedleAngle="{Binding Angle}" NeedleLength="0.7"/>
            <Compass:Compass Width="100" Height="100" StarColor="Yellow" BackgroundFill="CadetBlue" NeedleAngle="{Binding Angle}" NeedleLength="0.7"/>
            <Slider Grid.Column="0" Maximum="359" Value="{Binding Angle}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Thermometer:Thermometer DataContext="{Binding}" Height="100"  Temperature="{Binding Value}" IsCelsius="True" MinTemperature="-30"/>
            <Slider Width="32" Height="100" Maximum="50"  Minimum="-30" Value="37" Name="tempSlider" Orientation="Vertical" />
        </StackPanel>


    </ListView>
</Window>
